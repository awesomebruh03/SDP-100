<Window x:Class="YourNamespace.LandingPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chorono Task" Height="250" Width="400">
    <Border Padding="10" Margin="0,0,18,6" RenderTransformOrigin="0.5,0.5">
        <Border.RenderTransform>
            <TransformGroup>
                <ScaleTransform/>
                <SkewTransform AngleX="0.168"/>
                <RotateTransform/>
                <TranslateTransform X="0.33"/>
            </TransformGroup>
        </Border.RenderTransform>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Background="Transparent" Width="380" Height="208" VerticalAlignment="Center" HorizontalAlignment="Left" >

                <TextBlock Text="Project Name:"/>
                <TextBox x:Name="ProjectNameTextBox" Width="224" Margin="25,0,0,10" Height="18"/>

                <TextBlock Text="Project Description:"/>
                <TextBox x:Name="ProjectDescriptionTextBox" Width="250" Height="101"/>
                <Button Content="Save" Click="SaveButton_Click" Width="38" Height="20" Margin="0 15 0 0"/>

            </StackPanel>

        </Grid>

    </Border>
</Window>